<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Car</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body class="bg-body-tertiary">
  <%- include('../partials/admin-header') %>
    <div class="container mt-5 mb-5 p-5">
        <h3 class="text fs-2 mt-3">New Car</h3>
        <div class="my-1 fs-4 lead feedback"></div>
        <form class="mt-2 border border-1 px-5 pt-5 pb-0 rounded-4 shadow-sm">
            <div class="row mb-4">
              <div class="form-group col-3">
                <label class="fs-5">Make</label>
                <input class="form-control shadow-none outline-none make" placeholder="Make">
              </div>
              <div class="form-group col-3">
                <label class="fs-5">Engine</label>
                <input class="form-control shadow-none engine" placeholder="Engine">
              </div>
              <div class="form-group col-3">
                <label class="fs-5">Exterior colour</label>
                <input class="form-control shadow-none exterior" placeholder="Exterior colour">
              </div>
              <div class="form-group col-3">
                <label class="fs-5">Image 1</label>
                <input type="file" class="form-control shadow-none" placeholder="Image 1" id="image1">
              </div>
            </div>
            <div class="row mb-4">
                <div class="form-group col-3">
                  <label class="fs-5">Model</label>
                  <input class="form-control shadow-none outline-none model" placeholder="Model">
                </div>
                <div class="form-group col-3">
                  <label class="fs-5">Transmission</label>
                  <input class="form-control shadow-none transmission" placeholder="Transmission">
                </div>
                <div class="form-group col-3">
                  <label class="fs-5">Interior colour</label>
                  <input class="form-control shadow-none interior" placeholder="Interior colour">
                </div>
                <div class="form-group col-3">
                    <label class="fs-5">Image 2</label>
                    <input type="file" class="form-control shadow-none" placeholder="Image 2" id="image2">
                  </div>
              </div>
              <div class="row mb-4">
                <div class="form-group col-3">
                  <label class="fs-5">Price</label>
                  <input class="form-control shadow-none outline-none price" placeholder="Price">
                </div>
                <div class="form-group col-3">
                  <label class="fs-5">Category</label>
                  <input class="form-control shadow-none category" placeholder="Category">
                </div>
                <div class="form-group col-3">
                  <label class="fs-5">Car name</label>
                  <input class="form-control shadow-none" placeholder="Password">
                </div>
                <div class="form-group col-3">
                    <label class="fs-5">Image 3</label>
                    <input type="file" class="form-control shadow-none" placeholder="Image 3" id="image3">
                  </div>
              </div>
              <div class="row mb-4">
                <div class="form-group col-3">
                  <label class="fs-5">Mileage</label>
                  <input class="form-control shadow-none outline-none mileage" placeholder="Mileage">
                </div>
                <div class="form-group col-3">
                  <label class="fs-5">YOM</label>
                  <input class="form-control shadow-none YOM" placeholder="YOM">
                </div>
                <div class="form-group col-3">
                  <label class="fs-5">Stock</label>
                  <input class="form-control shadow-none stock" value="Available">
                </div>
                <div class="form-group col-3">
                    <label class="fs-5">Image 4</label>
                    <input type="file" class="form-control shadow-none" placeholder="Image 4" id="image4">
                  </div>
              </div>
              <div class="row align-items-center">
                <div class="form-group col-3">
                  <label class="fs-5">Condition</label>
                  <input class="form-control shadow-none outline-none condition" placeholder="Condition">
                </div>
                <div class="form-group col-6">
                  <label class="fs-5">Description</label>
                  <textarea class="form-control shadow-none description" placeholder="Description"></textarea>
                </div>
                <div class="form-group col-3">
                    <label class="fs-5">Image 5</label>
                    <input type="file" class="form-control shadow-none" placeholder="Image 5" id="image5">
                </div>
              </div>
                <div class="row my-4 d-flex justify-content-center gap-3">
                    <div class="col-2 btn btn-dark fs-5 rounded-pill p-2 submit">Submit</div>
                    <a href="#" class="col-2 btn btn-danger fs-5 rounded-pill p-2 cancel">Cancel</a>
                </div>
          </form>
    </div>
</body>
    <script>
      const submit = document.querySelector('.submit')
      const info = document.querySelector('.feedback')

      async function send() {
        const form = new FormData()
        form.append('make', document.querySelector('.make').value)
        form.append('model', document.querySelector('.model').value)
        form.append('price', document.querySelector('.price').value)
        form.append('mileage', document.querySelector('.mileage').value)
        form.append('condition', document.querySelector('.condition').value)
        form.append('engine', document.querySelector('.engine').value)
        form.append('transmission', document.querySelector('.transmission').value)
        form.append('category', document.querySelector('.category').value)
        form.append('YOM', document.querySelector('.YOM').value)
        form.append('description', document.querySelector('.description').value)
        form.append('exterior', document.querySelector('.exterior').value)
        form.append('interior', document.querySelector('.interior').value)
        form.append('stock', document.querySelector('.stock').value)

        const ids = ['image1', 'image2', 'image3', 'image4', 'image5']
        ids.forEach(id => {
          const file = document.getElementById(id)
          // console.log(file.files)
          if (file.files.length > 0) {
            form.append(id, file.files[0])
          }
        })

        const options = {
          method : 'POST',
          body : form
        }

        try {
          const response = await fetch('/admin/add', options)
          if (!response.ok) return new Error('Internal server error')
            const data = await response.json()
            info.textContent = data
            setTimeout(() => {
              location.assign('/admin/vehicles')
            }, 3000);
        } catch (error) {
          console.log('Error', error)
          info.textContent = 'There was a problem inserting the data in the database'
        }
      }
      
      submit.onclick = send
    </script>
</html>