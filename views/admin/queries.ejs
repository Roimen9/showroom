<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enquiries</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-body-tertiary">
    <%- include('../partials/admin-header')%>
    <div class="container mt-5 pt-4">
        <h3 class="pt-5 ms-md-0 ms-3"><%= rows.length %> Enquiries</h3>
        <div class="fs-4 my-2 lead feedback"></div>
        <div class="row my-2 gap-3 justify-content-around">
            <% rows.forEach(row => { %>
                <a href="/admin/query/<%= row.id %>" class="col-md-3 col-12 p-3 border border-1 rounded-4 shadow-sm mx-lg-0 mx-1" style="text-decoration: none; color: black;">
                    <div class="col-9 fs-5 lead text-left"><strong>Enquiry from: </strong><%= row.name %></div>
                    <div class="fs-5 lead"><strong>Email</strong> : <%= row.email %></div>
                    <div class="fs-5 lead"><strong>Phone number</strong> : <%= row.phone %></div>
                    <div class="fs-5 lead"><strong>Reason</strong> : <%= row.reason %></div>
                    <div class="fs-5 lead"><strong>Car</strong> : <%= row.car %></div>
                    <div class="fs-5 lead"><strong>Date</strong> : <%= row.date %></div>
                </a>
            <% }) %>
        </div>
    </div>
</body>
</html>
