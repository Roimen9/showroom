<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <title>Login</title>
    <style>
        @import url("https://fonts.googleapis.com/css?family=Poppins");
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        a {
            text-decoration: none;
            color: black;
        }

        a:hover {
            text-decoration: underline;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f2efef;
            font-family: 'Poppins', sans-serif;
        }

        .wrapper {
            position: relative;
            width: 430px;
            height: 400px;
            background-color: white;
            border: 1px solid black;
            border-radius: 15px;
            padding: 90px 32px 64px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            justify-content: center;
            width: 140px;
            height: 70px;
            background-color: rgb(12, 4, 28);
            border-radius: 0 0 20px 20px;
        }

        .form-header::before,
        .form-header::after {
            content: "";
            position: absolute;
            top: 0;
            width: 30px;
            height: 30px;
        }

        .form-header::before {
            left: -30px;
            border-top-right-radius: 50%;
            box-shadow: 15px 0 0 rgb(12, 4, 28);
        }

        .form-header::after {
            right: -30px;
            border-top-left-radius: 50%;
            box-shadow: -15px 0 0 rgb(12, 4, 28);
        }

        .titles {
            position: relative;
        }

        .title-login {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 24px;
        }

        .login-form {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 85%;
        }

        .input-box {
            position: relative;
            display: flex;
            flex-direction: column;
            margin: 20px 0;
        }

        .input-field {
            width: 100%;
            height: 55px;
            font-size: 16;
            background: transparent;
            color: black;
            padding: 0 20px;
            border: 1px solid #cccbcb;
            border-radius: 30px;
            outline: none;
        }

        .input-field:focus {
            border: 1px solid black;
        }

        .label {
            position: absolute;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            color: rgb(173, 171, 171);
            cursor: text;
        }

        .input-field:focus ~ .label,
        .input-field:valid ~ .label {
            top: 0;
            font-size: 14px;
            background-color: white;
            color: black;
            padding: 0 10px;
        }

        .input-field:valid ~ .label {
            color: rgb(173, 171, 171);
        }

        i {
            position: absolute;
            top: 50%;
            right: 25px;
            transform: translateY(-50%);
            font-size: 20px;
            color: rgb(173, 171, 171);
        }

        .form-cols {
            display: flex;
            justify-content: space-between;
            font-size: 14px;
        }

        .col-1 {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .btn-submit {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            height: 50px;
            background-color: black;
            color: white;
            font-size: 14px;
            font-weight: 500;
            border: none;
            border-radius: 30px;
            cursor: pointer;
        }

        .btn-submit:hover {
            gap: 15px;
        }

        .btn-submit i {
            font-size: 20px;
        }
    </style>
</head>
<body class="bg-tertiary">
    <div class="wrapper">
        <div class="form-header">
            <div class="titles">
                <div class="title-login">Login</div>
            </div>
        </div>
        <div class="login-form">
            <div class="feedback"></div>
            <div class="input-box">
                <input type="text" class="input-field email" id="log-email" required>
                <label for="" class="label">Email</label>
                <i class='bx  bx-envelope'  ></i>  
            </div>
            <div class="input-box">
                <input type="password" class="input-field password" id="log-pass" required>
                <label for="" class="label">Password</label>
                <i class='bx  bx-lock'  ></i> 
            </div>
            <div class="form-cols">
                <div class="col-1"></div>
                <div class="col-2">
                    <!-- <a href="#">Forgot password</a> -->
                </div>
            </div>
            <div class="input-box">
                <div class="btn-submit submit" id="signInBtn">Sign In</div>
            </div>
        </div>
    </div>    
</body>
<script>
    const email = document.querySelector('.email')
    const password = document.querySelector('.password')
    const submit = document.querySelector('.submit')
    const info = document.querySelector('.feedback')

    async function send() {
      if (email.value === "" || password.value === "") {
        info.style.color = 'red'
        info.textContent = "You have to fill in all fields"
        setTimeout(() => {
          info.textContent = ""
        }, 2000);
      } else {
        const user = {
          email : email.value,
          password : password.value
        }

        const options = {
          method : 'POST',
          body : JSON.stringify(user),
          headers : {
            'Content-type' : 'application/json'
          }
        }

        try {
          const response = await fetch('/auth/login', options)
          if (!response.ok) return new Error('Internal server error')
            const data = await response.json()
        if (data === 'Logged in successfully') {
              info.style.color = 'green'
              info.textContent = data
              setTimeout(() => {
                location.assign('/admin/home')
              }, 1000);            
            } else {
               info.style.color = 'red'
               info.textContent = data
              email.value = ""
              password.value = ""
              setTimeout(() => {
                info.textContent = ""
              }, 3000);
            }
        } catch (error) {
          console.log('Error', error)
          info.style.color = 'red'
          info.textContent = 'There was a problem logging in.Try again later'
        }
      }

    }

  document.addEventListener("keypress", (event) => {
    if (event.key === "Enter") {
        send()
    }
  });


    submit.onclick = send
  </script>
</html>